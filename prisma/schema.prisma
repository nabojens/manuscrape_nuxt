generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum FieldType {
  DATE
  STRING
  INT
  FLOAT
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  createdAt DateTime  @default(now()) @db.Timestamp(6)
  projects  Project[]
}

model Project {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now()) @db.Timestamp(6)
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id], onDelete: NoAction)
  fields    ProjectField[]
}

model ProjectField {
  id        Int         @id @default(autoincrement())
  label     String
  projectId Int
  project   Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  type      FieldType
}

model Observation {
  id   Int    @id @default(autoincrement())
  name String
}